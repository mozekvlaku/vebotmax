<UserControl x:Class="veBot_Operator.TimelineLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Canvas x:Name="mainCanvas">
        <Grid>
            <Rectangle x:Name="rectOuter" RadiusX="1" RadiusY="1" Opacity="0.8" Margin="0,1,-27,1" Panel.ZIndex="10" MinHeight="7" Height="0" MinWidth="7" Width="50">

                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#7FFF0000" Offset="0"/>
                        <GradientStop Color="#7F680606" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

        </Grid>
    </Canvas>
</UserControl>
